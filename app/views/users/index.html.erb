<div class="container">
  <div class="row">
      <div class="col-md-3">
          <%= render partial: 'show_leftside', locals: { book: @book, user: @user } %>
      </div>


      <div class="col-md-8 offset-md-1">
        <div class="col">
          <h2>Users</h2>
        </div>

        <table class="table table-striped">
          <thead>
            <tr>
              <th>image</th> 
              <th>name</th>
            </tr>
            <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td> 
              <td><%= user.name %></td> 
              <td><%= link_to "Show", user_path(user.id) =%></td>
            </tr>
            <% end %>
          </thead>
        </table>
      </div>
    </div>
  </div>