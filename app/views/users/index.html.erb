<div class="container mt-2">
  <div class="row">
      <div class="col-lg-3">
        <div class="row">
          <%= render partial: 'show_leftside', locals: { book: @book, user: @user } %>
        </div>
      </div>

      <div class="col-lg-1">
      </div>

      <div class="col-lg-8">
        <div class="row border-bottom">
          <h2>Users</h2>
        </div>

        <table class="table table-striped">
          <thead>
            <tr>
              <th>image</th> 
              <th>name</th>
            </tr>
            <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td> 
              <td><%= user.name %></td> 
              <td><%= link_to "Show", user_path(user.id) =%></td>
            </tr>
            <% end %>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>