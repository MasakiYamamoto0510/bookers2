  <div class="container d-flex mt-2"> 

    <div class="col-lg-4">
      <%= render 'show_leftside', book: @book, user: @user %>
    </div>

    <div class="col-lg-1">
    </div>

    <div class="col-lg-7">
      <div class="row border-bottom">
        <h2>Books</h2>
      </div>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>&nbsp;</th>
            <th>title</th> 
            <th>opinion</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </thead>
      </table>
    </div>
  </div>