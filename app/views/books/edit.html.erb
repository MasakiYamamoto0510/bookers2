<div class="container">
  <div class="row">
    <div class="col-lg-4">
    </div>
    <div class="col-lg-4">
      <div class="row mt-1">
        <h1>Editing Book</h1>
      </div>

      <% if @book.errors.any? %>
        <strong><%= @book.errors.count %>error prohibited this obj from being saved:</strong>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <div class="row d-flex flex-column ml-1">
        <%= form_with model: @book do |f| %>
          <div class="row">
            <p>Title</p>
          </div>
          <div class="row">
            <%= f.text_field :title %>
          </div>
          <div class="row pt-1">
            <p>Opinion</p>
          </div>
          <div class="row">
            <%= f.text_area :body %>
          </div>
          <div class="row mt-2">
            <%= f.submit '保存' %>
          </div>
          
        <% end %>
      </div>
        
      <div class="row pt-2">
        <%= link_to "Show", book_path(@book.id) %>
        <%= "|"%>
        <%= link_to "Back", books_path %>
      </div>
    </div>
    <div class="col-lg-4">
    </div>
  </div>
</div>