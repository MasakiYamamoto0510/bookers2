<h1>Books#show</h1>
<div class="container d-flex"> 

    <%= render partial: 'users/show_leftside', locals: { book: @book, user: @user } %>

    <div class="col-lg-7">
      <div class="row border-bottom">
        <h2>Book detail</h2>
      </div>
      <%= image_tag @user.get_profile_image(100,100) %>
      <%= @user.name %>
      <%= @post_book.title %>
      <%= @post_book.opinion %>
      <% if @post_book.user == current_user %>
      <%= link_to "Edit", edit_book_path(@post_book.id) %>
      <%= link_to "Destroy", book_path(@post_book.id), method: :delete %>
    <% end %>
    </div>
</div>