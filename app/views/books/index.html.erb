<div class="container mt-2">
  <div class="row d-flex flex-column">
    <% if @book.errors.any? %>
      <div class="row">
        <strong><%= @book.errors.count %>error prohibited this obj from being saved:</strong>
      </div>
      <div class="row">
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class="row">
      <div class="col-lg-3">
        <div class="row">
          <%= render partial: 'users/show_leftside', locals: { book: @book, user: @user } %>
        </div>
      </div>

      <div class="col-lg-1">
      </div>

      <div class="col-lg-8">
        <div class="row ml-1">
          <h2>Books</h2>
        </div>

        <table class="table table-striped">
          <thead>
            <tr>
              <th>&nbsp;</th>
              <th>Title</th>  
              <th>Opnion</th>  
            </tr>

            <% @books.each do |book| %>
            <tr> 
              <td><%= image_tag @user.get_profile_image(100,100) %></td>  
              <td class="col"><%= link_to book.title, book_path(book.id) %></td>  
              <td class="col"><%= book.body %></td>
            </tr>
            <% end %>
          </thead>
        </table>

      </div>
    </div>
  </div>
</div>
