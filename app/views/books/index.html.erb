<div class="container mt-2">
  <div class="row">
      <div class="col-lg-3">
        <div class="row">
          <%= render partial: 'users/show_leftside', locals: { book: @book, user: @user } %>
        </div>
      </div>

      <div class="col-lg-1">
      </div>

      <div class="col-lg-8">
        <div class="row border-bottom">
          <h2>Books</h2>
        </div>

        <table>

            <tr class="row border-bottom">
              <th class="col">&nbsp;</th>
              <th class="col">&nbsp;</th>
              <th class="col">&nbsp;</th>
              <th class="col">Title</th>  
              <th class="col">&nbsp;</th>
              <th class="col">&nbsp;</th>
              <th class="col">&nbsp;</th>
              <th class="col">&nbsp;</th>
              <th class="col">Opnion</th>  
              <th class="col">&nbsp;</th>
              <th class="col">&nbsp;</th>
            </tr>

          <% @books.each do |book| %>
            <tr class="row"> 
              <td><%= image_tag @user.get_profile_image(100,100) %></td>  
              <th class="col">&nbsp;</th>
              <td class="col"><%= link_to book.title, book_path(book.id) %></td>  
              <th class="col">&nbsp;</th>
              <th class="col">&nbsp;</th>
              <th class="col">&nbsp;</th>
              <td class="col"><%= book.opinion %></td>
            </tr>
          <% end %>

        </table>
      </div>
    </div>
  </div>
</div>
