<div class="container mt-2">
  <div class="row d-flex flex-column">
    <% if @book.errors.any? %>
      <div class="row">
        <strong><%= @book.errors.count %>error prohibited this obj from being saved:</strong>
      </div>
      <div class="row">
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class="row">
      <div class="col-md-3">
        <%= render partial: 'users/show_leftside', locals: { book: @book, user: @user } %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>&nbsp;</th>
              <th>Title</th>  
              <th>Opnion</th>  
            </tr>

            <% @books.each do |book| %>
            <tr> 
              <td>
              <%= link_to user_path(book.user_id) do%>
                <sapn><%= image_tag book.user.get_profile_image(100,100) %></span>
              <% end %>
              </td> 
              <td class="col"><%= link_to book.title, book_path(book.id) %></td>  
              <td class="col"><%= book.body %></td>
            </tr>
            <% end %>
          </thead>
        </table>

      </div>
    </div>
  </div>
</div>
